<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <style>
            body {
                font-family: "Lato", sans-serif;
            }

            .sidenav {
                height: 100%;
                width: 250px;
                position: fixed;
                z-index: 1;
                top: 0;
                left: 0;
                background-color: #111;
                overflow-x: hidden;
                transition: 0.5s;
                padding-top: 60px;
            }

            .sidenav .item {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
                transition: 0.3s;
            }

            .sidenav p {
                padding: 8px 8px 8px 32px;
                text-decoration: none;
                font-size: 15px;
                color: #b8b8b8;
                display: block;
                transition: 0.3s;
            }

            .sidenav a:hover {
                color: #f1f1f1;
            }

            .sidenav .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }

            .content {
                margin-left: 250px;
            }

            @media screen and (max-height: 450px) {
                .sidenav {padding-top: 15px;}
                .sidenav a {font-size: 18px;}
            }
        </style>
        <script>
            function openNav() {
                document.getElementById("mySidenav").style.width = "250px";
            }

            function closeNav() {
                document.getElementById("mySidenav").style.width = "0";
            }
        </script>
    </head>
    <body>

    <div id="mySidenav" class="sidenav">
        {% if app.user %}
            <p> you're loged in as: {{ app.user.getUsername}} <br>
                <a href="{{ path('app_logout') }}">logout</a>
            </p>
        {% else %}
            <p> please <a href="{{ path('app_login') }}">login</a> or <a href="{{ path('app_register') }}">sign in</a></p>
        {% endif %}
        <a class="item closebtn" href="javascript:void(0)" onclick="closeNav()">&times;</a>
        <a class="item" href="{{ path('lucky_number') }}">lucky number</a>
        <a class="item" href="{{ path('main') }}">main</a>
        <a class="item" href="#">Clients</a>
        <a class="item" href="#">Contact</a>
    </div>

    <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; menu</span>


    <div class="content">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
