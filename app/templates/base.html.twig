<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <link rel="shortcut icon" href="{{ asset('assets/images/favicon.ico') }}" type="image/x-icon">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/table.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/form.css') }}">
{#        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/form00.css') }}">#}
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
        <style>

        </style>
        <script>
            function openNav() {
                document.getElementById("mySidenav").style.width = "250px";
            }

            function closeNav() {
                document.getElementById("mySidenav").style.width = "0";
            }
        </script>
    </head>
    <body>

    <div id="mySidenav" class="sidenav">
        {% if app.user %}
            <p> you're loged in as: {{ app.user.getUsername}} <br>
                <a href="{{ path('app_logout') }}"><button class="btn btn-secondary btn-sm">logout</button></a>
            </p>
        {% else %}
            <p>you are not logged in<br>
                <a class="btn btn-primary btn-sm" href="{{ path('app_login') }}">login</a> or <a class="btn btn-secondary btn-sm" href="{{ path('app_register') }}">register</a>
            </p>
        {% endif %}
        <a class="item closebtn" href="javascript:void(0)" onclick="closeNav()">&times;</a>
        <a class="item" href="{{ path('planter') }}">planters</a>
        <a class="item" href="{{ path('plant_presets') }}">plant presets</a>
        <a class="item" href="{{ path('user_settings') }}">settings</a>
        <a class="item" href="{{ path('pair') }}">how to pair</a>
    </div>

    <span class="menu-button" onclick="openNav()">&#9776; menu</span>


    <div class="content">
        {% block body %}{% endblock %}
    </div>

    {% for message in app.flashes('success') %}
        <div class="error-box alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="error-box alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    </body>
</html>
