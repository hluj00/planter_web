{% extends 'base.html.twig' %}

{% block title %}Hello SettingsPlantController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
            <tr>
                <th>name</th>
                <th>moisture</th>
                <th>temperature</th>
                <th>min light level</th>
                <th>light duration</th>
                <th>editace</th>
            </tr>
            </thead>
            <tbody>
            {% for c in settings %}
                <tr>
                    <td>{{ c.name }}</td>
                    <td>{{ c.moisture }}</td>
                    <td>{{ c.temperature }}</td>
                    <td>{{ c.lightLevel }}</td>
                    <td>{{ c.lightDuration }}</td>
                    <td><a href="{{ path('plant_presets_edit' , {id: c.id}) }}">edituj</a></td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>
    <a href="{{ path('plant_presets_new') }}">vytvorit nový</a>
</div>
{% endblock %}
